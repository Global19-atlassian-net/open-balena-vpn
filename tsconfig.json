{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts"
	]
}
